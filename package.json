{
  "name": "worker-wrapper",
  "version": "1.2.2",
  "dependencies": {},
  "typings": "src/interface.d.ts",
  "main": "dist/WorkerWrapper.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsigel/worker-wrapper"
  },
  "keywords": [
    "typescript",
    "worker",
    "web-worker",
    "background",
    "typed"
  ],
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^5.2.5",
    "browserify": "^16.2.2",
    "expect.js": "^0.3.1",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^5.2.0",
    "typescript": "^3.0.1",
    "uglify-js": "^3.4.6"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm run clean && npm run compile && npm run browserify && npm run uglify",
    "clean": "rm -rf dist",
    "compile": "node_modules/.bin/tsc -p ./ && node_modules/.bin/tsc -p ./test && node_modules/.bin/tsc karma.conf.ts",
    "browserify": "node_modules/.bin/browserify dist/js/index.js -o dist/WorkerWrapper.js -s worker-wrapper",
    "uglify": "node_modules/.bin/uglifyjs dist/WorkerWrapper.js -o dist/WorkerWrapper.min.js",
    "pretest": "npm run build",
    "test": "node_modules/karma/bin/karma start",
    "test-debug": "node_modules/karma/bin/karma start --singleRun false --autoWatch true",
    "preversion": "npm run test",
    "postversion": "git push origin HEAD && git push origin HEAD --tags && npm run build && npm publish"
  }
}
