{
  "name": "worker-wrapper",
  "version": "0.0.1",
  "dependencies": {},
  "typings": "src/WorkerWrapper.ts",,
  "repository": {
    "type": "git",
    "url": "https://github.com/tsigel/worker-wrapper"
  },
  "keywords": [
    "typescript",
    "worker",
    "background",
    "typed"
  ],
  "devDependencies": {
    "@types/expect.js": "^0.3.29",
    "@types/mocha": "^2.2.42",
    "browserify": "^14.4.0",
    "expect.js": "^0.3.1",
    "karma": "^1.7.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^3.5.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.0.28"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "compile": "node_modules/.bin/tsc -p ./ && node_modules/.bin/tsc -p ./test && node_modules/.bin/tsc karma.conf.ts",
    "pretest": "npm run build",
    "test": "node_modules/karma/bin/karma start",
    "test-debug": "node_modules/karma/bin/karma start --singleRun false --autoWatch true",
    "uglify": "node_modules/.bin/uglifyjs dist/WorkerWrapper.js -o dist/WorkerWrapper.min.js",
    "browserify": "node_modules/.bin/browserify dist/js/WorkerWrapper.js -o dist/WorkerWrapper.js -s worker-wrapper",
    "copyInterface": "cp ./src/interface.d.ts dist/js/interface.d.ts",
    "build": "npm run compile && npm run browserify && npm run uglify && npm run copyInterface",
    "clean": "rm -rf dist",
    "preversion": "npm run test",
    "postversion": "git push origin HEAD && git push origin HEAD --tags",
  }
}
